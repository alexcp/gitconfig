[alias]
  ci = commit
  co = checkout
  di = diff
  aa = add --all
  br = branch
  st = status
  dc = diff --cached
  amend = commit --amend
  l = log --graph --abbrev-commit --date=relative
  r = !git l -20
  ra = !git r --all
[core]
	editor = vim
[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
    tool = vimdiff
